<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stage"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        app:columnCount="6"
        app:columnOrderPreserved="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="2"
        app:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymbal1"
            android:scaleType="fitCenter"
            android:src="@drawable/cymbal1"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom1"
            android:scaleType="fitCenter"
            android:src="@drawable/tom1"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom2"
            android:scaleType="fitCenter"
            android:src="@drawable/tom2"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymbal2"
            android:scaleType="fitCenter"
            android:src="@drawable/cymbal2"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="0" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="87dp"
            android:layout_height="88dp"
            android:background="#00000000"
            android:onClick="hihat"
            android:scaleType="fitCenter"
            android:src="@drawable/hihat"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="snare"
            android:scaleType="fitCenter"
            android:src="@drawable/snare"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="bass"
            android:scaleType="fitCenter"
            android:src="@drawable/bass"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom3"
            android:scaleType="fitCenter"
            android:src="@drawable/tom3"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymbal3"
            android:scaleType="fitCenter"
            android:src="@drawable/cymbal3"
            app:layout_column="5"
            app:layout_gravity="fill"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="112dp"
            android:layout_height="121dp"
            android:background="#00000000"
            android:onClick="recorder"
            android:scaleType="fitCenter"
            android:src="@drawable/recorder"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>